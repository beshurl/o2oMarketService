<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.o2omystore.dao.ProductLocationDao">

    <resultMap id="locationResultMap"
               type="com.ssafy.o2omystore.dto.ProductLocation">
        <id property="productId" column="product_id"/>
        <result property="zone" column="zone"/>
        <result property="xCode" column="x_code"/>
        <result property="yCode" column="y_code"/>
    </resultMap>

    <select id="selectLocationByProductId"
            parameterType="int"
            resultMap="locationResultMap">
        SELECT
            product_id,
            zone,
            x_code,
            y_code
        FROM location
        WHERE product_id = #{productId}
    </select>

</mapper>
